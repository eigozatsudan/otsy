{
  "name": "@otsukai/types",
  "version": "1.0.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "codegen": "openapi-typescript ./openapi/otsukai.v1.yaml -o ./src/api.types.ts",
    "watch": "npm run codegen && chokidar \"../**/*.yaml\" -c 'npm run codegen'",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "openapi-typescript": "^6.7.0",
    "typescript": "^5.2.2"
  }
}
