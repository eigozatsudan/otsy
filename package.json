{
  "name": "otsy",
  "version": "1.0.0",
  "private": true,
  "description": "Otsy - Voice-enabled shopping service platform",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "codegen:types": "yarn workspace @otsy/types codegen",
    "openapi:generate": "yarn workspace @otsy/api openapi:generate",
    "types:generate": "yarn workspace @otsy/api types:generate",
    "install:clean": "rm -rf node_modules */node_modules */*/node_modules && yarn install",
    "setup": "yarn install && yarn workspace @otsy/api db:generate"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.3",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@4.10.3",
  "resolutions": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "styled-components": "^5.3.11",
    "react-is": "^19.1.0",
    "typescript": "^5.2.2"
  }
}
